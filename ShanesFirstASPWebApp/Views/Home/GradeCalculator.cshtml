@{
    ViewBag.Title = "IS 413 Grade Calculator";
}

@model GradeCalculatorModel

<body>
    <h2>Grade Calculator</h2>
    <p>Enter Grade Earned in percent of total for each category as integer 1-100</p>
    <form method="post">
        <label>Assignments:</label>
        <input id="A" asp-for="A"/>
        <br />
        <label>Group Project:</label>
        <input id="GP" asp-for="GP"/>
        <br />
        <label>Quizzes:</label>
        <input id="Q" asp-for="Q"/>
        <br />
        <label>Exams:</label>
        <input id="E" asp-for="E"/>
        <br />
        <label>INTEX:</label>
        <input id="I" asp-for="I"/>
        <br />
        <br />
        <input type="submit" value="Submit Grades" id="submitButton" />
        <div asp-validation-summary="All"></div>
    </form>
</body>